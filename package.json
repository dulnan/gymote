{
  "name": "gymote",
  "version": "1.0.0",
  "description": "Use your phone as a remote pointing device on a computer",
  "author": "Jan Hug <me@dulnan.net>",
  "license": "MIT",
  "keywords": [
    "phone",
    "remote",
    "pointing",
    "cursor",
    "gyroscope"
  ],
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "main": "lib/gymote.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dulnan/gymote.git"
  },
  "scripts": {
    "build": "webpack --env build --mode production",
    "dev": "webpack --progress --colors --watch --env dev --mode development",
    "docs": "rm -rf ./docs && node_modules/.bin/jsdoc --configure .jsdoc.json --verbose",
    "test": "mocha --require babel-register --colors ./test/*.spec.js",
    "test:watch": "mocha --require babel-register --colors -w ./test/*.spec.js",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "@hughsk/fulltilt": "^0.7.1",
    "eventemitter3": "^4.0.0",
    "gyro-plane": "^1.0.2",
    "gyronorm": "^2.0.6",
    "lazy-brush": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "axios": "^0.21.1",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-preset-env": "^7.0.0-beta.3",
    "babel-register": "^7.0.0-beta.3",
    "chai": "^4.2.0",
    "eslint": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-loader": "^3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jsdoc": "^3.6.3",
    "jsdom": "15.1.1",
    "jsdoc-template": "github:braintree/jsdoc-template",
    "jsdom-global": "3.0.2",
    "mocha": "^6.2.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9",
    "yargs": "^14.0.0"
  }
}
